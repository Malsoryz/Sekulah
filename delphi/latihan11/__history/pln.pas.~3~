{$R *.dfm}

procedure Tflatihan11.golongtarifClick(Sender: TObject);
begin
case golongtarif.ItemIndex of
  0: begin
    daya.Items.Add('450');
    daya.Items.Add('900');
  end;
  1: begin
    daya.Items.Add('450');
    daya.Items.Add('900');
    daya.Items.Add('1300');
  end;
  2: begin
    daya.Items.Add('450');
    daya.Items.Add('900');
    daya.Items.Add('1300');
  end;
end;
end;

