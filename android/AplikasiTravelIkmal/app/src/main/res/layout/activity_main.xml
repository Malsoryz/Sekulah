<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornertravx"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/travxlogo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/travx_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAV-X"
            android:textSize="24dp"
            android:textColor="#1A5319"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/travxlogo"
        android:id="@+id/searchedit"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cornertravx"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:drawableEnd="@drawable/searchicon"
            android:text="Search"
            android:textColor="#5A5A5A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchedit"
        android:orientation="vertical"
        android:background="@drawable/cornertravx"
        android:layout_marginTop="16dp"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSPORTATION"
            android:textColor="#1A5319"
            android:textSize="32dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:id="@+id/judulmenu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih jenis alat transportasi  anda untuk memulai perjalanan baru anda"
            android:textSize="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="32dp"
            android:textColor="#181818"
            android:alpha="0.7"
            android:id="@+id/teksajakan" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:paddingVertical="16dp"
                android:background="@drawable/itembg">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/caricon"
                    android:background="#00000000"
                    android:id="@+id/btncar"
                    android:onClick="btncar" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#1A5319" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:paddingVertical="16dp"
                android:background="@drawable/itembg">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/motor"
                    android:background="#00000000"
                    android:id="@+id/btnmotor"
                    android:onClick="btnmotor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motorbike"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#1A5319"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="1"
                android:background="@drawable/itembg"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="64px">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="1"
                android:background="@drawable/itembg"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="64px">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:paddingVertical="16dp"
                android:background="@drawable/itembg">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/busicon"
                    android:background="#00000000"
                    android:id="@+id/btnbus"
                    android:onClick="btnbus"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bus"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#1A5319"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:paddingVertical="16dp"
                android:background="@drawable/itembg">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/airplane"
                    android:background="#00000000"
                    android:id="@+id/btnairplane"
                    android:onClick="btnairplane"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Airplane"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#1A5319"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="1"
                android:background="@drawable/itembg"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="32px">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_columnWeight="1"
                android:background="@drawable/itembg"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="32px">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fillstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/unfilledstar"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>


</RelativeLayout>