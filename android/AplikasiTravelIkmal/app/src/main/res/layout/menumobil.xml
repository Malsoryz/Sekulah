<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menumobil"
    android:background="@drawable/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornertravx"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/travxlogo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/travx_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAV-X"
            android:textSize="24dp"
            android:textColor="#1A5319"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/travxlogo"
        android:orientation="vertical"
        android:background="@drawable/cornertravx"
        android:layout_marginTop="16dp"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:src="@drawable/caricon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAR"
                android:textColor="#1A5319"
                android:textSize="32dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:id="@+id/judulmenu" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih tipe Mobil yang akan menemani perjalanan anda"
            android:textSize="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="24dp"
            android:textColor="#181818"
            android:alpha="0.7"
            android:id="@+id/teksajakan" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itembg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:drawableEnd="@drawable/searchicon"
            android:text="Search"
            android:textColor="#5A5A5A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/vehiclebg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:text="Sedan"
                    android:layout_marginBottom="8dp"
                    android:textColor="#1A5319"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:text="Kapasitas"
                    android:textColor="#1A5319"
                    android:textSize="12dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/listicon"
                    android:paddingHorizontal="16dp"
                    android:text=" penumpang maks : 4-5 orang"
                    android:textColor="#1A5319"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/listicon"
                    android:paddingHorizontal="16dp"
                    android:text=" Berat maks : 400-450 kg"
                    android:textColor="#1A5319"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#1A5319"
                    android:onClick="sedan"
                    android:text="Pesan"
                    android:textColor="#fffbfe" />
            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/caricon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/vehiclebg"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUV"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#1A5319"
                    android:textSize="24dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas"
                    android:paddingHorizontal="16dp"
                    android:textColor="#1A5319"
                    android:textSize="12dp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" penumpang maks : 5-7 orang"
                    android:paddingHorizontal="16dp"
                    android:textColor="#1A5319"
                    android:textSize="12dp"
                    android:drawableStart="@drawable/listicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Berat maks : 500-650 kg"
                    android:paddingHorizontal="16dp"
                    android:textColor="#1A5319"
                    android:textSize="12dp"
                    android:drawableStart="@drawable/listicon"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan"
                    android:textColor="#fffbfe"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#1A5319"
                    android:onClick="btnsuv"/>
            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/caricon" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>