<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/selectaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/addressusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="?attr/navbar_textcolor"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/addresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indonesia, Kalimantan Selatan, Banjarmasin, Banjarmasin Utara, sungai andai"
                android:textColor="?attr/navbar_textcolor"
                android:textSize="14dp"
                android:alpha="0.7"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/more_vert_icon"
            android:background="#00000000"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>