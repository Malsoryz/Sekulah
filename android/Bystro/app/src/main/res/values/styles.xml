<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gridItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="product_name">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="product_name_onview">
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="product_name_detail_onview">
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="product_name_onOrder">
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="product_name_detail">
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="product_price">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textColor">?attr/Accent1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="product_price_onView">
        <item name="android:textColor">?attr/Accent1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="product_stock_onView">
        <item name="android:textColor">?attr/navbar_textcolor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>